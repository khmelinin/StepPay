<Page x:Class="WpfApp32.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp32"
      mc:Ignorable="d" 
      Title="Page" Height="450" Width="997" >

    <Grid Margin="0,0,0.333,0">
        <Label Content="Введите логин"  HorizontalAlignment="Center" Margin="382,66,484,356" VerticalAlignment="Center" RenderTransformOrigin="0.265,0.244" Height="28" Width="131" />


        <TextBox x:Name="Login" HorizontalAlignment="Center" Height="23"  Margin="382,109,480,318" VerticalAlignment="Center" Width="135" RenderTransformOrigin="0.491,-0.052" />

        <Label Content="Введите пароль"   HorizontalAlignment="Center" Margin="382,158,480,258" VerticalAlignment="Center" Height="34" Width="135" />
        <PasswordBox x:Name="password" HorizontalAlignment="Center"  Margin="382,197,480,222"  VerticalAlignment="Center" Width="135" Height="31" />

        <Button x:Name="regin" Click="regin_Click" Content="Регистрация" Margin="311,279,370.333,139"  VerticalAlignment="Center" Height="32" />
        <Button x:Name="enter" Click="enter_Click" Content="Войти" Margin="311,325,370.333,92" VerticalAlignment="Center" RenderTransformOrigin="0.498,2.21" Height="33" />


    </Grid>
</Page>
